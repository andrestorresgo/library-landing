---
import { Image } from "astro:assets";

import ruler from "src/assets/drawings/Regla.png";
---

<Image src={ruler} alt="ruler" class="ruler" />

<style>
    .ruler {
        animation: dibujo 3s infinite;
        filter: grayscale(100%);
        opacity: 0.7;
        position: absolute;
        top: 15%;
        right: 20%;
        z-index: 2;
        width: 60px;
        height: auto;
    }

    @keyframes dibujo {
        0%,
        20% {
            transform: translate(0, 0) rotate(0deg);
        }
        21%,
        40% {
            transform: translate(3px, 1px) rotate(10deg);
        }
        41%,
        60% {
            transform: translate(-3px, -1px) rotate(-7deg);
        }
        61%,
        80% {
            transform: translate(-1px, 3px) rotate(5deg);
        }
        81%,
        100% {
            transform: translate(1px, -3px) rotate(-10deg);
        }
    }

    /* Hide on tablets and mobile */
    @media only screen and (max-width: 1024px) {
        .ruler {
            display: none;
        }
    }

    /* Small desktop */
    @media (min-width: 1024px) {
        .ruler {
            right: 10%;
            width: 70px;
        }
    }

    /* Large desktop */
    @media (min-width: 1280px) {
        .ruler {
            right: 15%;
            width: 80px;
        }
    }

    /* Extra large desktop */
    @media (min-width: 1536px) {
        .ruler {
            right: 20%;
            width: 90px;
        }
    }
</style>
