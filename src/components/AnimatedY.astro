---
import { Image } from "astro:assets";

import y from "src/assets/drawings/Y.png";
---

<Image src={y} alt="y" class="y mt-2 mr-2 sm:ml-8 lg:ml-20" />

<style>
    .y {
        animation: dibujo3 4s infinite;
        filter: grayscale(100%);
        opacity: 0.7;
        position: absolute;
        top: 60%;
        left: 15%;
        z-index: 2;
        width: 60px;
        height: auto;
    }

    @keyframes dibujo3 {
        0%,
        15% {
            transform: translate(0, 0) rotate(0deg);
        }
        16%,
        30% {
            transform: translate(2px, -1px) rotate(-8deg);
        }
        31%,
        45% {
            transform: translate(-1px, 3px) rotate(9deg);
        }
        46%,
        60% {
            transform: translate(-2px, -2px) rotate(-7deg);
        }
        61%,
        75% {
            transform: translate(3px, 1px) rotate(6deg);
        }
        76%,
        90% {
            transform: translate(-3px, -1px) rotate(-5deg);
        }
        91%,
        100% {
            transform: translate(1px, 2px) rotate(4deg);
        }
    }

    /* Hide on tablets and mobile */
    @media only screen and (max-width: 1024px) {
        .y {
            display: none;
        }
    }

    /* Small desktop */
    @media (min-width: 1024px) {
        .y {
            left: 8%;
            width: 70px;
        }
    }

    /* Large desktop */
    @media (min-width: 1280px) {
        .y {
            left: 12%;
            width: 80px;
        }
    }

    /* Extra large desktop */
    @media (min-width: 1536px) {
        .y {
            left: 15%;
            width: 90px;
        }
    }
</style>
