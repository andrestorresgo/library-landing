---
import {
    Card,
    CardContent,
    CardFooter,
    CardHeader,
    CardTitle,
    CardLogo,
    CardInfo,
    CardIcon,
} from "@/components/ui/card";
---

<section class="py-12 md:py-20 px-4 bg-gradient-to-b from-white to-blue-50">
    <div class="container mx-auto max-w-6xl">
        <!-- Title -->
        <div class="text-center mb-12">
            <h2
                class="text-3xl md:text-4xl lg:text-5xl font-extrabold marvin uppercase leading-tight text-orange-500"
            >
                Puntos de donación
            </h2>
        </div>

        <!-- Donation Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            <!-- School Card -->
            <Card className="bg-gradient-to-br from-amber-400 to-amber-600 shadow-xl hover:shadow-2xl transition-all duration-300">
                <CardHeader>
                    <CardLogo>
                        <img
                            src="/img/logo_sc.png"
                            alt="School icon"
                            class="w-auto h-8"
                        />
                    </CardLogo>
                    <div class="flex-1">
                        <CardTitle className="text-white font-extrabold comfortaa text-2xl mb-1">
                            Unidad Educativa Seminario San Cristóbal
                        </CardTitle>
                        
                    </div>
                </CardHeader>
                
                <CardContent>
                    <CardInfo>
                        <CardIcon>
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                                <circle cx="12" cy="10" r="3"/>
                            </svg>
                        </CardIcon>
                        <span class="text-md text-white/90">Calle Potosi 335</span>
                    </CardInfo>
                    
                    <CardInfo>
                        <CardIcon>
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"/>
                                <polyline points="12,6 12,12 16,14"/>
                            </svg>
                        </CardIcon>
                        <span class="text-md text-white/90">8:00 - 16:00</span>
                    </CardInfo>
                </CardContent>
            </Card>

            <!-- Company Card -->
            <Card className="bg-gradient-to-br from-blue-500 to-blue-700 shadow-xl hover:shadow-2xl transition-all duration-300">
                <CardHeader>
                    <CardLogo>
                        <img
                            src="/img/logo_itgroup.png"
                            alt="Company icon"
                            class="w-8 h-auto"
                        />
                    </CardLogo>
                    <div class="flex-1">
                        <CardTitle className="text-white font-extrabold comfortaa text-2xl mb-1">
                            ITGroup Systems
                        </CardTitle>
                        
                    </div>
                </CardHeader>
                
                <CardContent>
                    <CardInfo>
                        <CardIcon>
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                                <circle cx="12" cy="10" r="3"/>
                            </svg>
                        </CardIcon>
                        <span class="text-sm text-white/90">Barrio Villa Socavón</span>
                    </CardInfo>
                    
                    <CardInfo>
                        <CardIcon>
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"/>
                                <polyline points="12,6 12,12 16,14"/>
                            </svg>
                        </CardIcon>
                        <span class="text-sm text-white/90"> 8:30 - 12:30  /  14:30 - 18:30</span>
                    </CardInfo>
                </CardContent>
            </Card>
        </div>
    </div>
</section>

<style>
    .comfortaa {
        font-family: "Comfortaa Variable", "Comfortaa", sans-serif;
        font-variation-settings: "wght" 400;
    }

    .schoolbell {
        font-family: "Schoolbell", cursive;
        font-weight: 400;
        transform: rotate(-2deg);
        display: inline-block;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }
    .marvin {
        font-family: "Marvin", sans-serif;
        font-weight: 400;
        display: inline-block;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }
    
    
</style>